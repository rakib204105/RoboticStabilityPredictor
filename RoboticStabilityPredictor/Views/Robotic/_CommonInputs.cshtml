@{
    ViewData["Title"] = "Provide Robot Parameters";
    var robotType = ViewBag.RobotType as string;
    var numberOfArms = ViewBag.NumberOfArms;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .param-card {
        background: #ffffff;
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
        padding: 2rem;
        margin-top: 2rem;
        transition: transform 0.2s;
    }

        .param-card:hover {
            transform: scale(1.01);
        }

    .form-control:focus {
        border-color: #e80266;
        box-shadow: 0 0 0 0.25rem rgba(232, 2, 102, 0.25);
    }

    .form-label {
        font-weight: 500;
        color: #333;
    }

    .btn-custom {
        background-color: #e80266;
        border: none;
    }

        .btn-custom:hover {
            background-color: #c20158;
        }

    .section-header {
        font-size: 1.8rem;
        font-weight: 600;
        color: #343a40;
    }

    .robot-summary {
        font-size: 1rem;
        color: #666;
        margin-top: -10px;
        margin-bottom: 20px;
    }
</style>

<div class="container d-flex justify-content-center">
    <div class="param-card w-100" style="max-width: 600px;">
        <h2 class="text-center section-header">🔧 Enter Robot Parameters</h2>
        <p class="text-center robot-summary">
            Robot Type: <strong>@robotType</strong> | Arms: <strong>@numberOfArms</strong>
        </p>

        <form method="post" action="/Robotic/FinalResult" id="robot-input-form">
            <input type="hidden" name="robotType" value="@robotType" />
            <input type="hidden" name="numberOfArms" value="@numberOfArms" />

            <div class="mb-3">
                <label for="damping" class="form-label">🔄 Damping Coefficient</label>
                <input type="number" step="0.01" class="form-control" id="damping" name="damping" placeholder="Enter damping (e.g. 0.85)" required />
            </div>

            <div class="mb-3">
                <label for="deflection" class="form-label">📏 Deflection</label>
                <input type="number" step="0.01" class="form-control" id="deflection" name="deflection" placeholder="Enter deflection (e.g. 1.25 mm)" required />
            </div>

            <div class="mb-4">
                <label for="stiffness" class="form-label">🧱 Stiffness</label>
                <input type="number" step="0.01" class="form-control" id="stiffness" name="stiffness" placeholder="Enter stiffness (e.g. 500.00 N/m)" required />
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-custom px-4 py-2">🚀 Predict Stability</button>
            </div>
        </form>
    </div>
</div>
