@{
    var robotType = ViewBag.RobotType as string;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
<style>
    .arm-option {
        position: relative;
        width: 100px;
        height: 100px;
        border: 2px solid transparent;
        border-radius: 15px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        font-weight: 600;
        color: #333;
        background-color: #f8f9fa;
        transition: border-color 0.3s, box-shadow 0.3s, transform 0.3s;
    }

    .arm-option:hover {
        border-color: #e80266;
        box-shadow: 0 8px 20px rgba(232, 2, 102, 0.4);
        transform: translateY(-5px);
    }

    .arm-option.selected {
        border-color: #e80266;
        box-shadow: 0 8px 20px rgba(232, 2, 102, 0.7);
    }

    .checkmark {
        position: absolute;
        top: 8px;
        right: 8px;
        background: #e80266;
        color: white;
        border-radius: 50%;
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 14px;
        opacity: 0;
        transition: opacity 0.3s;
        pointer-events: none;
        z-index: 10;
    }

    .arm-option.selected .checkmark {
        opacity: 1;
    }
</style>

<h4 class="text-center mt-4 mb-4">How many arms does the <strong>@robotType</strong> robot have?</h4>

<a href="/Robotic/InputRobotType" class="btn btn-secondary mb-3">← Back</a>

<form method="post" action="/Robotic/MaterialSelection" id="arm-form">
    <input type="hidden" name="robotType" value="@robotType" />
    <input type="hidden" name="numberOfArms" id="selectedArms" value="" />
    
    <div id="arm-selection-container" class="d-flex justify-content-center gap-4 flex-wrap">
        @for (int i = 1; i <= 6; i++)
        {
            <div class="arm-option" data-arm="@i" tabindex="0" onclick="selectArm(this)">
                @i
                <div class="checkmark">&#10003;</div>
            </div>
        }
    </div>

    <div class="text-center mt-4">
        <button type="submit" class="btn btn-primary btn-lg" id="next-btn" disabled>
            🚀 Next: Select Material
        </button>
    </div>
</form>

<script>
    function selectArm(option) {
        document.querySelectorAll('.arm-option').forEach(opt => opt.classList.remove('selected'));
        option.classList.add('selected');

        const armCount = option.getAttribute('data-arm');
        document.getElementById('selectedArms').value = armCount;
        document.getElementById('next-btn').disabled = false;
    }
</script>



